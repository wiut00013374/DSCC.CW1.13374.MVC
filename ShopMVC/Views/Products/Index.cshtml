@model IEnumerable<ShopMVC.DTOs.ProductDto>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4 text-center mb-4">Product List</h1>
            <div class="text-end mb-3">
                <a asp-action="Create" class="btn btn-primary">Create New Product</a>
            </div>

            @if (Model != null && Model.Any())
            {
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ProductId)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CategoryName)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Price)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CategoryId)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                <td>@Html.DisplayFor(modelItem => item.CategoryId)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-outline-warning btn-sm">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-outline-info btn-sm">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-outline-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">No products available. Click "Create New Product" to add one.</div>
            }
        </div>
    </div>
</div>
